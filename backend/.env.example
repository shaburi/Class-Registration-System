# Backend Environment Variables Template
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=5000
NODE_ENV=development
API_VERSION=v1

# Cors Configuration
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# Database Configuration  
DB_HOST=localhost
DB_PORT=5432
DB_NAME=uptm_scheduling
DB_USER=postgres
DB_PASSWORD=your_database_password
DATABASE_URL=postgresql://postgres:your_database_password@localhost:5432/uptm_scheduling

# JWT Secret (generate a strong random string)
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_random

# Firebase Admin SDK (for verifying ID tokens)
# Download the service account key JSON from Firebase Console
# and paste the values here
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# Head of Programme (HOP) Email Addresses
# Comma-separated list of emails that should have HOP role
# Example: HOP_EMAILS=hop1@uptm.edu.my,hop2@uptm.edu.my,hop3@uptm.edu.my
HOP_EMAILS=hop@uptm.edu.my
# HOP-to-Programme mapping (email:programme pairs, comma-separated)
# Example: HOP_PROGRAMME_MAP=hop1@uptm.edu.my:CT206,hop2@uptm.edu.my:CT204,hop3@uptm.edu.my:CC101
HOP_PROGRAMME_MAP=

# Email Configuration (optional, for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# aSc Edupage API Configuration
# Get your API key from aSc Timetables software under Edupage API Key settings
EDUPAGE_API_KEY=your_edupage_api_key_here
